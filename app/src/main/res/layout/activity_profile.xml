<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:paddingBottom="40dp"
    android:background="@drawable/profile"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3761F8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />
            <TextView
                android:id="@+id/tv_search_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="10dp"
                android:textColor="#C2FBFBFB"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorTransparentBlack">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/imagelayout"
                    android:paddingTop="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/Iconimage2"
                        android:layout_width="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_height="105dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profileicon"
                        app:civ_border_width="5dp"
                        app:civ_border_color="@color/colorWhite"/>

                    <TextView
                        android:layout_below="@+id/Iconimage2"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:text=" Ravio"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_below="@+id/circleLayouts"
                        android:id="@+id/StFirstLayout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingEnd="10dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/StImage1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_invite_friend"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:id="@+id/St_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage1"
                            android:layout_marginEnd="15dp"
                            android:text="Name"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage1"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="25dp"
                            android:text="name"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/StsecoundLayout"
                        android:layout_below="@+id/StFirstLayout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/StImage2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/ic_system_update"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:id="@+id/St_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage2"
                            android:layout_marginEnd="15dp"
                            android:text="Mob No"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                        <TextView
                            android:id="@+id/mob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage2"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="25dp"
                            android:text="mob no"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/StthirdLayout"
                        android:layout_below="@+id/StsecoundLayout"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/StImage3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_email_24"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:id="@+id/St_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage3"
                            android:layout_marginEnd="15dp"
                            android:text="Email"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage3"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="25dp"
                            android:text="email"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/StFourthLayout"
                        android:layout_below="@+id/StthirdLayout"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/StImage31"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_date_range_24"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:id="@+id/St_31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage31"
                            android:layout_marginEnd="15dp"
                            android:text="Registration Date"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffff"
                            android:layout_toEndOf="@+id/StImage31"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="25dp"
                            android:text="date"
                            android:gravity="start"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>