<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorTransparentBlack"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:id="@+id/linear"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/new_payment"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/courseid"
                        android:layout_width="370dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="type"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/coursename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Course Name"
                        android:textColor="#F8FAF8"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textSize="13dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:hint="Pay Amount"
                            android:textColor="#F8FAF8"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:hint="date"
                            android:layout_marginLeft="5dp"
                            android:textColor="#F8FAF8"
                            android:textSize="13dp" />
                    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/virified"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#3EFA57">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Verified"
            android:textAlignment="center"
            android:textColor="#F7F7F8"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/virify"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#F44D4D"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Payment Under Verification"
            android:textAlignment="center"
            android:textColor="#F7F7F8"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>